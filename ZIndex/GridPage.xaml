<ContentPage
    x:Class="ZIndex.GridPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <Grid>
        <Label
            Grid.Row="0"
            FontSize="32"
            HorizontalOptions="Center"
            Text="wow, such world"
            TextColor="Yellow"
            VerticalOptions="Center"
            ZIndex="3" />
        <Image
            Grid.Row="0"
            HeightRequest="310"
            HorizontalOptions="Center"
            Source="doge.png"
            VerticalOptions="Center"
            WidthRequest="250"
            ZIndex="2" />
        <Image
            Grid.Row="0"
            Aspect="Center"
            HorizontalOptions="Start"
            Source="background.png"
            VerticalOptions="Start"
            ZIndex="1" />
    </Grid>
</ContentPage>